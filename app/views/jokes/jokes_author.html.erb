<% provide :title, "JokesByAuthor" %>

<div class="content_container clearfix">
	<h2 class="title title_font">Jokes entered by <%= @current_joke.author %> 
		<span class="font_color_grey small">(<%= @jokes.count %>)</span></h2>
	<div class="page_main page_main_list clearfit">
		
  <%= will_paginate %>
	  <ul>
      <% @jokes.each do |joke| %>
        <li>
          <%= link_to joke.name, joke, :class => "joke_name font_2" %><br /> 
          <div class="joke_author"><%= joke.created_at.strftime("%m/%d/%Y") %></div>
          <%= simple_format joke.content %>
        </li>
      <% end %>		
    </ul>
  <%= will_paginate %>
  </div>

	<div class="page_links clearfix">
	<%= render '/jokes/linkstojokes' %>
	</div>
</div>
