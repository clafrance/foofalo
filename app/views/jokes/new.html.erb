<% provide :title, "Create Joke" %>
<div class="clearfix">
  <fieldset class="content_wrapper round">
	<div class="content_list align_center clearfix">
		<h3 class="title">Enter New Joke</h3>
	  <%= form_for(@joke) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>
	    <div class="field">
	      <%= f.label :name, "Joke Name:" %>
	      <%= f.text_field :name, :class=>"input", :autofocus=>true %>
	    </div>
	    <div class="field", id="joke_details">
	      <%= f.label :content, "Joke details:" %>
	      <%= f.text_area :content, :class=>"input textarea" %>
	    </div>
	    <div class="actions">
	      <%= f.submit "Submit", :class=>"button" %>
	      <p class="button cancel_button">
		    <a href="javascript:history.back()">Cancel</a>
		  </p>
	    </div>
	  <% end %>	  
    </div>

    <div class="joke_links" class="clearfix align_center">
      <p class="view_my_jokes clearfix">
        <%= image_tag("arrow_right.png", :alt => "arrow image", :height=>"20px") %>
        <%= link_to 'View All Jokes', '#' %>
      </p>
      <p class="view_my_jokes clearfix">
        <%= image_tag("arrow_right.png", :alt => "arrow image", :height=>"20px") %>
        <%= link_to 'View, Edit My Jokes', '#' %>
      </p>
    <div>
  </fieldset>
</div>