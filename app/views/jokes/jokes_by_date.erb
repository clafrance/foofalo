<div class="clearfix">
  <fieldset class="content_wrapper round">
	<div class="content_list align_center clearfix">
	  <h3 class="title">Jokes entered on <%= @current_joke.created_at.strftime("%m/%d/%Y") %></h3>
	  <table>
        <tr>
   	      <td class="joke_name bold">Joke Name</td>
	      <td class="joke_author bold">Entered by</td>
	    </tr>
	    <% @jokes.each do |joke| %>
	      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
            <td  class="joke_name"><%= link_to joke.name, joke  %></td>
	        <td  class="joke_author"><%= link_to joke.author, jokesbyauthor_path(:joke=>joke.id)  %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="joke_links" class="clearfix align_center">
      <p class="view_my_jokes clearfix">
        <%= image_tag("arrow_right.png", :alt => "arrow image", :height=>"20px") %>
        <%= link_to 'View All Jokes', alljokes_path %>
      </p>
      <p class="view_my_jokes clearfix">
        <%= image_tag("arrow_right.png", :alt => "arrow image", :height=>"20px") %>
        <%= link_to 'View, Edit My Jokes', myjokes_path %>
      </p>
      <p class="create_new_joke clearfix">
        <%= image_tag("arrow_right.png", :alt => "arrow image", :height=>"20px") %>
        <%= link_to 'Enter New Jokes', newjoke_path %>
      </p>
    <div>
  </fieldset>
</div>