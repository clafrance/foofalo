<header>
  <nav class="round">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <% if !current_user.nil? %>
        <li>Hi, <%= current_user.firstname %></li>
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "Sign out", signout_path %></li>
      <% else %>
		     <li><%= link_to "Sign up", signup_path %></li>
		     <li><%= link_to "Sign in", signin_path %></li>
      <% end %>
    </ul>
  </nav>
</header>