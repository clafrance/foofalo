<% provide(:title, 'Index') %>
<h1>Foofalo</h1>
<div class="clearfix">
  <div class="joke_legend_title round">
    <h2 class="round">Joke of the Day</h2>
    <div  class="legend clearfix">
      <h3><%= @the_random_joke.name %></h3>
      <p><%= @the_random_joke.content %></p>
	   </div>
  </div>

  <div class="challenge_legend_title round">
    <h2 class="round">Challenge of the week</h2>
    <div  class="legend clearfix">
      <h3><%= @the_random_challenge.name %></h3>
      <p><%= @the_random_challenge.content %></p>

      <h3>Choose the Correct Answer for <%= @the_random_challenge.name %></h3>
		  <%= form_tag(submit_answer_path, :method => :put) do %>
			  <%= hidden_field_tag "challenge_id[]", @the_random_challenge.id %>
			  <div class="field">
 		      <%= check_box_tag "answer[]", @the_random_challenge.a %>
		      <%= label_tag @the_random_challenge.a, "a. " %>
		      <%= @the_random_challenge.a %><br/>
			  </div>
			  <div class="field">
				  <%= check_box_tag "answer[]", @the_random_challenge.b %>
	        <%= label_tag @the_random_challenge.b, "b. " %>
				  <%= @the_random_challenge.b %><br/>
			  </div>
			  <div class="field">
				  <%= check_box_tag "answer[]", @the_random_challenge.c %>
				  <%= label_tag @the_random_challenge.c, "c. " %>
				  <%= @the_random_challenge.c %><br/>
			  </div>
			  <div class="field">
				  <%= check_box_tag "answer[]", @the_random_challenge.d %>
				  <%= label_tag @the_random_challenge.d, "d. " %>
				  <%= @the_random_challenge.d %><br/>
			  </div>
			
			  <div class="field", id="joke_details">
		      <%= label_tag 'Enter your explanation' %>
				  <%= text_area_tag "reason[]" %>
		    </div>

			  <div class="actions">
			    <%= submit_tag "Submit Answer" %>
			  </div>
      <% end %>
	  </div>
 </div>

 <div class="fact_legend_title round">
   <h2 class="round">Fun Facts</h2>
   <div  class="legend clearfix">
	    <h3><%= @the_random_fun_fact.name %></h3>
     <p><%= @the_random_fun_fact.content %></p>
   </div>
 </div>

 <div>
	  <h2>My Links</h2>
	  <ul>
	  <% display_links.each do |link| %>
	    <li><%= link_to link.name, "#{url_with_protocol(link.url)}", :target => :blank %></li>
	  <% end %>
	  </ul>
	</div>
</div>