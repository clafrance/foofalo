<% provide :title, "Create Challenge Answers" %>

<div class="clearfix">
	<h3 class="title">Enter New Answer</h3>
  <%= form_for([@challenge, @challenge.answers.new]) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
	     <%= f.label :content, "Answer" %>
	     <%= f.text_field :content, :class=>"input", :autofocus=>true %>
	   </div>
	   <div class="field", id="joke_details">
	     <%= f.label :correct, "Correct?" %>
	     <%= f.text_field :correct, :placeholder => "Enter true or false", :class=>"input textarea" %>
	   </div>
	   <div class="actions">
	     <%= f.submit "Save Answer", :class=>"button" %>
	     <p class="button cancel_button">
	        <a href="javascript:history.back()">Cancel</a></p>
	   </div>
  <% end %>	  
</div>