<% provide :title, "Links" %>

<div class="content_container clearfix">
	<h2 class="title">My Links</h2>
  <div class="page_main page_main_list clearfit">
    <% @categories.each do |category| %>
	    <% if Link.where(:user_id => current_user.id, 
	                      :category => category).count > 0 %>
	      <div class="categories">
	        <h4><%= category %> <span>(<%= Link.where(:user_id => current_user.id, 
	                      :category => category).count %>)</span></h4>
	      </div>
			  <div class="links clearfix">
			    <% Link.where(:user_id => current_user.id, 
							:category => category).order(:name).each do |link| %>
			      <span><%= link_to link.name, "#{url_with_protocol(link.url)}", :target => :blank %></span>
			    <% end %><br />
        </div>
      <% end %>
    <% end %>		
  </div>

	<div class="page_links clearfix">
		<%= render '/links/linkstomylinks' %>
	</div>
</div>