<% provide :title, "ManageLinks" %>

<div class="content_container clearfix">
	<h2 class="page_title">Manage Links
	  <span class="font_grey_small">( Total: <%= Link.where(:user_id => current_user.id).count %> )</span>
	</h2>
	<div class="page_main page_main_list clearfit">
	  <ul>
	    <% my_links.each do |link| %>
			  <div class="clearfix links_row">
		      <span class="link_name_width">
		        <%= link_to link.name, "#{url_with_protocol(link.url)}", :target => :blank %>
		      </span>
					<span class="link_cat_width"><%= link.category %></span>
					<span class="link_date_width"><%= link.created_at.strftime("%m/%d/%Y") %></span>
					<span class="link_buttons">      
		      <%= link_to "Delete", link, :method => :delete, :confirm => "Deleting link #{link.name}?" %>
		      <%= link_to "Edit", edit_link_path(link) %></span>
				</div>
		  <% end %>
	  </ul>
  </div>

	<div class="page_links clearfix">
		<%= render '/links/linkstomylinks' %>
	</div>
</div>