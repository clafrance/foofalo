<% provide(:title, 'Sign up') %>
<h2 class="center title_font">Sign up</h2>

<div class="content_container padding_top_10 clearfix">
	<%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages', :object => f.object %>

		<div class="field field_center">
		  <%= f.label :username %><br />
		  <%= f.text_field :username, :class => "field_size", :autofocus=>true %>
		</div>
		<div class="field field_center">
		  <%= f.label :password %> <span class="font_color_grey">(minimum 6 characters)</span><br />
		  <%= f.password_field :password, :class => "field_size" %>
		</div>
		<div class="field field_center">
		  <%= f.label :password_confirmation, "Retype Password" %><br />
		  <%= f.password_field :password_confirmation, :class => "field_size" %>
		</div>
		<div class="field field_center">
		  <%= f.label :firstname, "First Name" %><br />
		  <%= f.text_field :firstname, :class => "field_size" %>
		</div>
		<div class="field field_center">
		  <%= f.label :lastname, "Last Name" %><br />
		  <%= f.text_field :lastname, :class => "field_size" %>
		</div>
		<div class="field field_center">
		  <%= f.label :email, "Parents' Email" %><br />
		  <%= f.text_field :email, :class => "field_size" %>
		</div>
		<div class="field field_center">
		  <%= f.label :email_confirmation, "Retype Parents' Email" %><br />
		  <%= f.text_field :email_confirmation, :class => "field_size" %>
		</div>
	
		<p class="signup_info center">By clicking the Sign Up button, you agree to our <%= link_to "Terms and Use", terms_path %>. Please read it before clicking Sign up button.</p>
	    <div class="center margin_bottom_20"><%= f.submit "Sign up", :class=>"buttons" %>
      <a href="javascript:history.back()">Cancel</a></div>
	<% end %>
</div>