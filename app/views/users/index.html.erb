<% provide :title, 'Users' %>
<h2 class="center title_font">All Users</h2>

<div class="content_container">
	<%= will_paginate %>

	<ul class="users">
		<p><span class="bold font_2">Me:</span> 
			 <span class="margin_left_10 font_2"><%= link_to current_user.username, current_user %></span>
			 <span class="font_color_grey margin_left_10"><%= current_user.firstname %> <%= current_user.lastname %>,</span>
			 <span class="font_color_grey margin_left_10"><%= current_user.email %></span>
			</p>
	  <% @users.each do |user| %>
		  <li class="list_no_style">
			  <% if current_user.privilege == "super user" || current_user.privilege == "admin"%>
			    <p><span class="bold font_2"><%= link_to user.username, user %></span> 
				     <span class="font_color_grey margin_left_10"><%= full_name(user.firstname, user.lastname) %>,</span>
				     <span class="font_color_grey margin_left_10"><%= user.email %></span>
				  <% if current_user.id != user.id %>
				    <%= link_to "Update Privilege", user, :class => "margin_left_30" %> 
				      <span class="margin_left_10 margin_right_10">|</span>
				    <%= link_to "Delete User", user, :method => :delete, 
				      :confirm => "Deleting user #{full_name(user.firstname, user.lastname)}?" %>
			    <% end %></p>
			  <% else %>
			    <p><%= user.username %>
			  <% end %></p>
			</li>
	  <% end %>
	</ul>

	<%= will_paginate %>
</div>