<% provide :title, 'All users' %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
	  <li>
		  <p><%= user.username %> <%= full_name(user.firstname, user.lastname) %><br />
		  <% if current_user.privilege == "admin" && current_user.id != user.id %>
		    | <%= link_to "delete", user, :method => :delete, 
		      :confirm => "Deleting user #{full_name(user.firstname, user.lastname)}?" %>
		  <% end %></p>
		</li>
  <% end %>
</ul>

<%= will_paginate %>

