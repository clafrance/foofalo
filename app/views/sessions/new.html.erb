<% provide :title, "Sign in" %>
<h2 class="title title_font">Sign in</h2>

<div class="content_container clairfix">
	<%= form_tag sessions_path do %>
	  <div class="field">
	    <%= label_tag :username %><br />
	    <%= text_field_tag :username, params[:username], :autofocus=>true, :class => "field_size" %>
	  </div>
	
	  <div class="field">
	    <%= label_tag :password %><br />
	    <%= password_field_tag :password %>
	  </div>
	
	  <p class="reminders">Forgot your username? Click <%= link_to "here", usernamereminder_path %></p>
	  <p class="reminders">Forgot your password? Click <%= link_to "here", new_password_reset_path %></p>
	
	  <div class="field rememberme">
	    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    	<%= label_tag :remember_me %>
	  </div>
	
	  <%= submit_tag "Sign in", :class=>"buttons" %>
	  <a href="javascript:history.back()">Cancel</a>
	<% end %>

	<p>New user? Click <%= link_to "Sign up now!", signup_path %></p>
</div>