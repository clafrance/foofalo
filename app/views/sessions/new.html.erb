<% provide :title, "Sign in" %>
<h2 class="center title_font">Sign in</h2>

<div class="content_container padding_top_10 clairfix">
	<%= form_tag sessions_path do %>
	  <div class="field field_center">
	    <%= label_tag :username %><br />
	    <%= text_field_tag :username, params[:username], :autofocus=>true, :class => "field_size" %>
	  </div>
	
	  <div class="field field_center">
	    <%= label_tag :password %><br />
	    <%= password_field_tag :password %>
	  </div>
	
	  <div class="field field_center rememberme padding_top_20">
	    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    	<%= label_tag :remember_me %>
	  </div>
	
	  <div class="field field_center">
		  <p class="reminders">Forgot your username? Click <%= link_to "here", usernamereminder_path %></p>
		  <p class="reminders">Forgot your password? Click <%= link_to "here", new_password_reset_path %></p>
	  </div>
	
	  <div class="center margin_bottom_40 margin_top_40">
		  <%= submit_tag "Sign in", :class=>"buttons" %>
		  <a href="javascript:history.back()">Cancel</a>
	  </div>
	<% end %>

	<p class="center">New user? <%= link_to "Sign up now!", signup_path %></p>
</div>